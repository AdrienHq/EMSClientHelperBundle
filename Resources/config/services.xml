<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
       <parameter key="emsch.routing.environment_loader.class">EMS\ClientHelperBundle\Routing\EnvironmentLoader</parameter>
       <parameter key="emsch.client_request.class">EMS\ClientHelperBundle\Elasticsearch\ClientRequest</parameter>
    </parameters>
    
    <services>
        <service id="emsch.routing.environment_loader" class="%emsch.routing.environment_loader.class%">
            <tag name="routing.loader" />
        </service>
        
        <service id="emsch.twig.extension.routing" class="EMS\ClientHelperBundle\Twig\RoutingExtension">
            <argument type="service" id="router" />
            <argument type="service" id="request_stack" />
            <tag name="twig.extension" />
        </service>
        
        
        <service id="emsch.client.factory" class="Elasticsearch\ClientBuilder" />
        
        <service id="emsch.client" class="Elasticsearch\Client" >
            <factory service="emsch.client.factory" method="fromConfig"/>
        </service>
        
        
        <service id="emsch.client_request_factory" class="EMS\ClientHelperBundle\Elasticsearch\ClientRequestFactory">
            <argument type="service" id="request_stack" />
        </service>
        
        
        <service id="emsch.client_request" class="%emsch.client_request.class%" abstract="true">
            <factory service="emsch.client_request_factory" method="create"/>
        </service>
    </services>
</container>